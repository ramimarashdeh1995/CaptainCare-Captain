<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardMyAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_5sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPersonal"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/sergio"
                app:civ_border_color="#FFF"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@id/imgPersonal"
                android:gravity="center"
                android:hint="Name"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <!--  <ImageButton
                  android:id="@+id/imgButton2"
                  android:layout_width="@dimen/_20sdp"
                  android:layout_height="@dimen/_20sdp"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="@dimen/_5sdp"
                  android:background="@drawable/ic_follower"
                  android:layout_toStartOf="@id/imgButton"
                  tools:ignore="ContentDescription" />-->
            <Button
                android:id="@+id/button_UnBlock"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/transparent"
                android:text="@string/un_block"
                android:textAllCaps="false"
                android:textColor="@drawable/custom_button_text_color"
                android:textSize="@dimen/_12ssp"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>