<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="NavigationMenuItemsStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
        <!--
         <item name="android:windowBackground">@drawable/custom_dialog_border</item>
         <item name="android:titleTextColor" tools:ignore="NewApi">@color/black</item>
         <item name="android:titleTextAppearance" tools:ignore="NewApi">@style/Base.TextAppearance.AppCompat.Large</item>
         android:Theme.Holo.Light.Dialog.NoActionBar
         <item name="android:headerDividersEnabled">true</item>
 -->
    </style>
    <style name="ProgressDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/baseColor</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/baseColor</item>
        <item name="android:colorForeground">#B2DFDB</item>
    </style>


</resources>
