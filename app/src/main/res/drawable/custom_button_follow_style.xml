<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_5sdp" />
            <stroke android:width="@dimen/_2sdp" android:color="@color/darkBlue" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_5sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/indigo" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_5sdp" />
            <gradient android:centerColor="@color/blue" android:endColor="@color/darkBlue" android:startColor="@android:color/holo_blue_light" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/indigo" />
        </shape>
    </item>
</selector>